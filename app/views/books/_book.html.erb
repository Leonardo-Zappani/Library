<%= link_to book_path(book),
            class: "group block w-full max-40 h-72 flex flex-col
                    bg-white border border-gray-200 rounded-lg overflow-hidden
                    shadow-sm hover:shadow-lg hover:-translate-y-1
                    transform transition duration-200" do %>

  <% if book.cover_image.attached? %>
  <div class="aspect-[9/16] bg-gray-300 overflow-hidden mx-auto ">
    <%= image_tag book.cover_image, alt: book.title, class: "object-cover" %>
  </div>
  <% else %>
    <div class="w-full h-44 bg-gray-100 flex items-center justify-center text-gray-400">
      Sem capa
    </div>
  <% end %>

  <div class="p-4 flex-1 flex flex-col">
    <h3 class="text-lg font-semibold text-gray-800 truncate mb-2">
      <%= book.title %>
    </h3>
    <p class="text-sm text-gray-600 mb-3 truncate">
      <%= book.author.presence || "Autor nÃ£o informado" %>
    </p>
    <p class="text-sm text-gray-500 flex-1 overflow-hidden">
      <%= truncate(book.description, length: 100) %>
    </p>
  </div>

  <footer class="px-4 py-2 bg-gray-50 text-center">
    <p class="text-xs text-gray-400 uppercase">
      Publicado em <%= l(book.created_at.to_date, format: :long) %>
    </p>
  </footer>

<% end %>
