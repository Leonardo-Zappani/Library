<div id="<%= dom_id book %>">
  <article class="flex flex-col items-start justify-between hover:opacity-80 transition-opacity duration-300 ease-in-out" >

    <%= link_to book_path(book) do %>

    <div  class="relative w-full">
      <%= image_tag book.cover_image, class:"aspect-[16/9] w-full rounded-2xl bg-gray-100 object-cover" if book.cover_image.attached? %>
      <div class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
    </div>
    <div class="w-full">
      <div class="text-xs -mt-8 ml-auto text-right w-full pr-2.5">
        <time class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 border" datetime="<%= book.updated_at.strftime('%m-%d-%Y') %>" class="text-gray-500"><%= book.created_at.strftime('%B %d, %Y') %></time>
      </div>
      <p class="group relative">
        <h2 class="mt-9 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
          <%= book.title %>
        </h2>
        <p class="mt-3 line-clamp-3 text-sm leading-6 text-gray-600"><%= book.description %></p>
        <p class="mt-3 line-clamp-3 text-sm leading-6 text-gray-600">
          Nota: <%= book.available %>
        </p>
      </div>

    <% end %>
  </article>
</div>
