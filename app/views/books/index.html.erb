<% meta title: "Livros", description: "Todos os lviros" %>


<div class="mt-16 mx-auto max-w-3xl px-4 sm:mt-24">
  <div class="text-center">
    <h1 class="text-2xl tracking-tight font-extrabold sm:text-3xl md:text-4xl font-display text-gray-800">
      <span class="block">Livros</span>
    </h1>
  </div>
</div>

<div class="font-inter antialiased text-gray-800 tracking-tight my-16">
  <main class="grow">
    <section>
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="flex justify-end mb-6 w-full">
          <%= link_to "Novo Livro", new_book_path,
                      class: "px-4 py-2 bg-primary-600 text-white rounded-md hover:bg-primary-700" %>
        </div>
        <div
          class="grid
                 grid-cols-1        <!-- 1 coluna por padrão -->
                 sm:grid-cols-2     <!-- ≥640px: 2 colunas -->
                 md:grid-cols-3     <!-- ≥768px: 3 colunas -->
                 lg:grid-cols-4     <!-- ≥1024px: 4 colunas -->
                 gap-x-8 gap-y-20
                 mx-auto lg:mx-0">
          <% @books.each do |book| %>
            <%= render book %>
          <% end %>
        </div>
      </div>
    </section>
  </main>
</div>
