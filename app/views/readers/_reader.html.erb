<div id="<%= dom_id(reader) %>"
     class="w-full max-w-sm h-72
            group relative bg-white border border-gray-200 rounded-lg overflow-hidden
            shadow-sm hover:shadow-lg hover:-translate-y-1 transform transition duration-200
            flex flex-col">

  <!-- link transparente -->
  <%= link_to reader_path(reader), class: "absolute inset-0 z-10" do %>
    <span class="sr-only">Ver detalhes de <%= reader.name %></span>
  <% end %>

  <!-- conteúdo principal -->
  <div class="p-6 flex-1 flex flex-col items-center space-y-3 overflow-hidden">
    <h3 class="text-xl font-semibold text-gray-900 text-center truncate w-full">
      <%= reader.name %>
    </h3>

    <p class="text-sm text-gray-500 text-center truncate w-full">
      <strong>Email:</strong> <%= reader.email %>
    </p>

    <p class="text-sm text-gray-500 text-center truncate w-full">
      <strong>Código:</strong> <%= reader.code %>
    </p>
  </div>

  <!-- rodapé -->
  <div class="px-6 py-2 bg-gray-50 text-center">
    <p class="text-xs text-gray-400 uppercase">
      Criado em <%= l(reader.created_at.to_date, format: :long) %>
    </p>
  </div>
</div>
