<% meta title: "Leitores", description: "Todos os leitores" %>

<div class="mt-16 mx-auto max-w-3xl px-4 sm:mt-24">
  <div class="text-center">
    <h1 class="text-2xl tracking-tight font-extrabold sm:text-3xl md:text-4xl font-display text-gray-800">
      <span class="block">Leitores</span>
    </h1>
  </div>
</div>

<div class="font-inter antialiased text-gray-800 tracking-tight my-16">
  <main class="grow">
    <section>
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="flex justify-end mb-6 w-full">
          <%= link_to "Novo Leitor", new_reader_path,
                      class: "px-4 py-2 bg-primary-600 text-white rounded-md hover:bg-primary-700" %>
        </div>
        <div class="mt-12 mx-auto max-w-7xl px-6 lg:px-8 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
          <% @readers.each do |reader| %>
            <div class="p-2 h-full ">
            <%= render reader %>
            </div>
          <% end %>
        </div>
      </div>
    </section>
  </main>
</div>
