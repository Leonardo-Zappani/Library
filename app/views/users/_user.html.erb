<div id="<%= dom_id(user) %>" class="group relative bg-white border rounded-2xl overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-200">
  <div class="flex items-center p-6 space-x-4">
    <!-- Initials avatar -->
    <div class="h-12 w-12 rounded-full bg-primary-100 flex items-center justify-center text-primary-600 font-bold text-lg">
      <%= user.name.split.map(&:first).join.upcase %>
    </div>

    <!-- Name & Email -->
    <div class="flex-1">
      <h3 class="text-xl font-semibold text-gray-900"><%= user.name %></h3>
      <p class="mt-1 text-sm text-gray-600 flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
          <path d="M2.94 6.94a1.5 1.5 0 012.12 0L10 11.88l4.94-4.94a1.5 1.5 0 112.12 2.12l-6 6a1.5 1.5 0 01-2.12 0l-6-6a1.5 1.5 0 010-2.12z"/>
        </svg>
        <span class="ml-2"><%= user.email %></span>
      </p>
    </div>

    <!-- Details link -->
    <%= link_to user_path(user), class: "absolute inset-0" do %>
      <span class="sr-only">Ver detalhes de <%= user.name %></span>
    <% end %>
  </div>
</div>
