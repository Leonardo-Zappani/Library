<% meta title: @user.name, description: @user.email %>
<% content_for :title, @user.name %>
<% content_for :meta_tags do %>
  <meta name="description" content="Detalhes do usuário <%= @user.name %>" />
<% end %>

<div class="container mx-auto px-4 lg:px-8 my-16 max-w-3xl">
  <%= link_to "← Voltar para usuários", users_path, class: "hover:opacity-75 font-semibold" %>


  <div class="bg-white rounded-2xl p-8 border p-4 mt-2">
    <header class="mb-6">
      <h1 class="text-3xl font-bold text-gray-900"><%= @user.name %></h1>
      <p class="text-sm text-gray-500">
        Criado em
        <time datetime="<%= @user.created_at.iso8601 %>">
          <%= l(@user.created_at, format: :long) %>
        </time>
      </p>
    </header>

    <dl class="grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-4 mb-8">
      <div>
        <dt class="font-medium text-gray-700">Email</dt>
        <dd class="mt-1 text-gray-900"><%= mail_to @user.email %></dd>
      </div>
    </dl>

    <div class="flex space-x-2 ">
      <%= link_to edit_user_path(@user), class:"shrink-0 mt-4 md:mt-0 inline-flex items-center justify-center px-4 py-2 border border-gray-300 shadow-sm text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 -ml-1 mr-3" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"></path>
        </svg>
        Editar
      <% end %>

      <%= button_to @user, method: :delete, class:"shrink-0 mt-4 md:mt-0 inline-flex items-center justify-center px-4 py-2 border border-gray-300 shadow-sm text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" do %> <!-- Delete button -->
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 -ml-1 mr-3" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
          <path fill-rule="evenodd" d="M16.5 4.478v.227a48.816 48.816 0 013.878.512.75.75 0 11-.256 1.478l-.209-.035-1.005 13.07a3 3 0 01-2.991 2.77H8.084a3 3 0 01-2.991-2.77L4.087 6.66l-.209.035a.75.75 0 01-.256-1.478A48.567 48.567 0 017.5 4.705v-.227c0-1.564 1.213-2.9 2.816-2.951a52.662 52.662 0 013.369 0c1.603.051 2.815 1.387 2.815 2.951zm-6.136-1.452a51.196 51.196 0 013.273 0C14.39 3.05 15 3.684 15 4.478v.113a49.488 49.488 0 00-6 0v-.113c0-.794.609-1.428 1.364-1.452zm-.355 5.945a.75.75 0 10-1.5.058l.347 9a.75.75 0 101.499-.058l-.346-9zm5.48.058a.75.75 0 10-1.498-.058l-.347 9a.75.75 0 001.5.058l.345-9z" clip-rule="evenodd"></path>
        </svg>
        Deletar
      <% end %>

    </div>


  </div>
</div>
